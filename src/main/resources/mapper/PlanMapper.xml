<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.juneutf.mtg.mapper.PlanMapper">

	<insert id="insertPlan" parameterType="com.juneutf.mtg.model.PlanModel" useGeneratedKeys="true" keyProperty="id">
    INSERT  INTO plan
    ( date_day,date_plan,time_start,time_end,purpose,charge,status) 
	VALUES
	(#{date_day},TO_DATE(#{date_plan}, 'YYYY-MM-DD'),#{time_start},#{time_end},#{purpose},#{charge},'予約中')
	</insert>
	<select id="selectPlan" resultType="com.juneutf.mtg.model.PlanModel">
	SELECT * FROM plan
	WHERE date_plan >= current_date	AND status = '予約中'
	ORDER BY date_plan ASC;
	</select>
	<select id="selectMaxIdPlan" resultType="com.juneutf.mtg.model.PlanModel">
	SELECT MAX(id) FROM plan
	</select>
	
</mapper>